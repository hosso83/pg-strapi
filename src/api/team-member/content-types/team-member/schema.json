{
  "kind": "collectionType",
  "collectionName": "team-members",
  "info": {
    "singularName": "team-member",
    "pluralName": "team-members",
    "displayName": "Team Member"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {
    "i18n": {
      "localized": false
    }
  },
  "attributes": {
    "name": {
      "type": "string",
      "required": true
    },
    "slug": {
      "type": "uid",
      "targetField": "name",
      "required": true
    },
    "role": {
      "type": "string",
      "required": true
    },
    "department": {
      "type": "enumeration",
      "required": true,
      "enum": [
        "Executive",
        "Technology",
        "Mining",
        "Environmental",
        "Geotechnical",
        "Water",
        "Energy",
        "Regional",
        "Project Management",
        "Engineering"
      ]
    },
    "bio": {
      "type": "text",
      "required": true
    },
    "image": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": [
        "images"
      ]
    },
    "imageUrl": {
      "type": "string",
      "required": false
    },
    "linkedin": {
      "type": "string",
      "required": false
    },
    "email": {
      "type": "email",
      "required": false
    },
    "specializations": {
      "type": "json",
      "required": false
    },
    "order": {
      "type": "integer",
      "required": false,
      "default": 0
    },
    "featured": {
      "type": "boolean",
      "required": false,
      "default": false
    }
  }
}
