{
  "kind": "collectionType",
  "collectionName": "job-positions",
  "info": {
    "singularName": "job-position",
    "pluralName": "job-positions",
    "displayName": "Job Position"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {
    "i18n": {
      "localized": false
    }
  },
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "slug": {
      "type": "uid",
      "targetField": "title",
      "required": true
    },
    "department": {
      "type": "string",
      "required": true
    },
    "location": {
      "type": "string",
      "required": true
    },
    "type": {
      "type": "enumeration",
      "required": true,
      "default": "Full-time",
      "enum": [
        "Full-time",
        "Part-time",
        "Contract",
        "Internship"
      ]
    },
    "summary": {
      "type": "text",
      "required": true
    },
    "responsibilities": {
      "type": "json"
    },
    "requirements": {
      "type": "json"
    },
    "benefits": {
      "type": "json"
    },
    "salary": {
      "type": "string"
    },
    "closingDate": {
      "type": "date"
    }
  }
}
