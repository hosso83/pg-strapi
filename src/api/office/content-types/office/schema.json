{
  "kind": "collectionType",
  "collectionName": "offices",
  "info": {
    "singularName": "office",
    "pluralName": "offices",
    "displayName": "Office"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {
    "i18n": {
      "localized": false
    }
  },
  "attributes": {
    "city": {
      "type": "string",
      "required": true
    },
    "country": {
      "type": "string",
      "required": true
    },
    "address": {
      "type": "text",
      "required": true
    },
    "phone": {
      "type": "string"
    },
    "email": {
      "type": "email"
    },
    "isHeadquarters": {
      "type": "boolean",
      "default": false
    },
    "latitude": {
      "type": "float"
    },
    "longitude": {
      "type": "float"
    },
    "order": {
      "type": "integer",
      "default": 0
    },
    "image": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": [
        "images"
      ]
    }
  }
}
