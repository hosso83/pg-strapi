{
  "kind": "collectionType",
  "collectionName": "team_members",
  "info": {
    "singularName": "team-member",
    "pluralName": "team-members",
    "displayName": "Team Member",
    "description": "Leadership and key team members"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "name": {
      "type": "string",
      "required": true
    },
    "slug": {
      "type": "uid",
      "targetField": "name",
      "required": true
    },
    "role": {
      "type": "string",
      "required": true
    },
    "department": {
      "type": "enumeration",
      "enum": [
        "Executive",
        "Technology",
        "Mining",
        "Environmental",
        "Geotechnical",
        "Water",
        "Energy",
        "Regional",
        "Project Management",
        "Engineering"
      ],
      "required": true
    },
    "bio": {
      "type": "text",
      "required": true
    },
    "image": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": ["images"]
    },
    "imageUrl": {
      "type": "string",
      "required": false
    },
    "linkedin": {
      "type": "string",
      "required": false
    },
    "email": {
      "type": "email",
      "required": false
    },
    "specializations": {
      "type": "json",
      "required": false
    },
    "order": {
      "type": "integer",
      "default": 0,
      "required": false
    },
    "featured": {
      "type": "boolean",
      "default": false,
      "required": false
    }
  }
}
