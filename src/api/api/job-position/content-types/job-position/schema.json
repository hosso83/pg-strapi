{
  "kind": "collectionType",
  "collectionName": "job_positions",
  "info": {
    "singularName": "job-position",
    "pluralName": "job-positions",
    "displayName": "Job Position",
    "description": "Career opportunities and job listings"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "slug": {
      "type": "uid",
      "targetField": "title",
      "required": true
    },
    "department": {
      "type": "enumeration",
      "enum": ["Engineering", "Environment", "Digital", "Management", "Planning", "Operations", "Finance", "HR"],
      "required": true
    },
    "location": {
      "type": "string",
      "required": true
    },
    "type": {
      "type": "enumeration",
      "enum": ["Full-time", "Part-time", "Contract", "Internship"],
      "default": "Full-time"
    },
    "summary": {
      "type": "text",
      "required": true
    },
    "responsibilities": {
      "type": "json"
    },
    "requirements": {
      "type": "json"
    },
    "salary": {
      "type": "string"
    },
    "closingDate": {
      "type": "date"
    },
    "featured": {
      "type": "boolean",
      "default": false
    }
  }
}
