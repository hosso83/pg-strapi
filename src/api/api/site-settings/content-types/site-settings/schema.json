{
  "kind": "singleType",
  "collectionName": "site_settings",
  "info": {
    "singularName": "site-settings",
    "pluralName": "site-settings",
    "displayName": "Site Settings",
    "description": "Global site configuration"
  },
  "options": {
    "draftAndPublish": false
  },
  "pluginOptions": {},
  "attributes": {
    "siteName": {
      "type": "string",
      "required": true,
      "default": "Project Globally"
    },
    "siteDescription": {
      "type": "text"
    },
    "logo": {
      "type": "media",
      "multiple": false,
      "allowedTypes": ["images"]
    },
    "favicon": {
      "type": "media",
      "multiple": false,
      "allowedTypes": ["images"]
    },
    "primaryColor": {
      "type": "string"
    },
    "secondaryColor": {
      "type": "string"
    },
    "googleAnalyticsId": {
      "type": "string"
    },
    "socialLinks": {
      "type": "component",
      "repeatable": true,
      "component": "shared.social-link"
    },
    "navigation": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "api::navigation.navigation"
    }
  }
}
