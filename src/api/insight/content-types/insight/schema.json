{
  "kind": "collectionType",
  "collectionName": "insights",
  "info": {
    "singularName": "insight",
    "pluralName": "insights",
    "displayName": "Insight"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {
    "i18n": {
      "localized": false
    }
  },
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "slug": {
      "type": "uid",
      "targetField": "title",
      "required": true
    },
    "excerpt": {
      "type": "text",
      "required": true
    },
    "content": {
      "type": "blocks"
    },
    "category": {
      "type": "string"
    },
    "badge": {
      "type": "string"
    },
    "badgeVariant": {
      "type": "enumeration",
      "default": "primary",
      "enum": [
        "primary",
        "secondary"
      ]
    },
    "author": {
      "type": "string"
    },
    "readTime": {
      "type": "integer"
    },
    "featured": {
      "type": "boolean",
      "default": false
    },
    "featuredImage": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": [
        "images"
      ]
    },
    "publishDate": {
      "type": "date"
    },
    "tags": {
      "type": "json"
    }
  }
}
